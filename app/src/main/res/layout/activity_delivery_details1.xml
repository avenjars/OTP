<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.lenovo.otp.DeliveryDetails1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/elements"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="54dp"
                android:text="Delivery Details"
                android:textColor="#ffffff"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="65dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/textView2"
                android:layout_toStartOf="@+id/textView2"
                app:srcCompat="@drawable/homeforall" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <Button
                    android:id="@+id/btnback"
                    android:layout_width="33dp"
                    android:layout_height="29dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/navigatiobtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.454" />

                <TextView
                    android:id="@+id/jars123"
                    android:layout_width="67dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Jars"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.157"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.47"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:width="92pt"
                    android:height="24pt"
                    android:lineSpacingMultiplier="0.86"
                    android:text="Pune."
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.891"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.668"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/location" />


            </android.support.constraint.ConstraintLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/constraintLayout"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="32dp"
            android:text="Name"
            android:textColor="#808080"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/editTextname"
            android:layout_width="match_parent"
            android:hint="Name"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginTop="8dp"
            android:ems="5"



            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/contactnumber"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/editTextname"
            android:layout_alignStart="@+id/editTextname"
            android:layout_below="@+id/editTextname"
            android:layout_marginTop="19dp"
            android:text="Contact Number"
            android:textColor="#808080"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editTextcontactnumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Contact Number"
            android:layout_alignLeft="@+id/contactnumber"
            android:layout_alignStart="@+id/contactnumber"
            android:layout_below="@+id/contactnumber"
            android:layout_marginTop="8dp"

            android:ems="5"
            android:inputType="phone" />

        <TextView
            android:id="@+id/socityname"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/editTextcontactnumber"
            android:layout_alignStart="@+id/editTextcontactnumber"
            android:layout_below="@+id/editTextcontactnumber"
            android:layout_marginTop="23dp"
            android:text="Socity Name"
            android:textColor="#808080"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editTextsocityname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Society Name"
            android:layout_alignLeft="@+id/socityname"
            android:layout_alignStart="@+id/socityname"
            android:layout_below="@+id/socityname"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/flatnoname"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/editTextsocityname"
            android:layout_alignStart="@+id/editTextsocityname"
            android:layout_below="@+id/editTextsocityname"
            android:layout_marginTop="27dp"
            android:text="Flat No./ Flat Name"
            android:textColor="#808080"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editTextflatnoname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Flat No./ Flat Name"
            android:layout_alignLeft="@+id/flatnoname"
            android:layout_alignStart="@+id/flatnoname"
            android:layout_below="@+id/flatnoname"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/landmark"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/editTextflatnoname"
            android:layout_alignStart="@+id/editTextflatnoname"
            android:layout_below="@+id/editTextflatnoname"
            android:layout_marginTop="31dp"
            android:text="Landmark(optional)"
            android:textColor="#808080"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editTextlandmark"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Landmark(optional)"
            android:layout_alignLeft="@+id/landmark"
            android:layout_alignStart="@+id/landmark"
            android:layout_below="@+id/landmark"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/editTextlandmark"
            android:layout_alignStart="@+id/editTextlandmark"
            android:layout_below="@+id/editTextlandmark"
            android:layout_marginTop="35dp"
            android:text="Area"
            android:textColor="#808080"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editTextarea"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Area"
            android:layout_alignLeft="@+id/area"
            android:layout_alignStart="@+id/area"
            android:layout_below="@+id/area"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/delivarypreference"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/editTextarea"
            android:layout_alignStart="@+id/editTextarea"
            android:layout_below="@+id/editTextarea"
            android:layout_marginTop="35dp"
            android:visibility="gone"
            android:text="Delivery Preference"
            android:textColor="#808080"
            android:textSize="12dp" />

        <RadioGroup
            android:id="@+id/rediog"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:visibility="gone"
            android:layout_alignLeft="@id/delivarypreference"
            android:layout_alignStart="@+id/delivarypreference"
            android:layout_below="@+id/delivarypreference"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/regular"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/rediog"
                android:layout_alignStart="@+id/rediog"
                android:layout_below="@+id/rediog"
                android:layout_marginTop="8dp"
                android:checked="false"
                android:ems="5"

                android:text="Regular Delivery"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/express"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/regular"
                android:layout_alignStart="@+id/regular"
                android:layout_marginTop="8dp"
                android:checked="false"
                android:ems="5"
                android:text="Express Delivery"
                android:textSize="15dp" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/redsecond"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignLeft="@id/rediog"
            android:layout_alignStart="@+id/rediog"
            android:layout_below="@+id/rediog"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/today"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/redsecond"
                android:layout_alignStart="@+id/redsecond"
                android:layout_below="@+id/redsecond"
                android:layout_marginTop="8dp"
                android:checked="false"
                android:ems="5"

                android:text="Today"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/tommaro"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/today"
                android:layout_alignStart="@+id/today"
                android:layout_below="@+id/today"
                android:layout_marginTop="8dp"
                android:checked="false"
                android:ems="5"
                android:text="Tomorrow"
                android:textSize="15dp" />

        </RadioGroup>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignLeft="@id/redsecond"
            android:layout_alignStart="@id/redsecond"
            android:layout_below="@id/redsecond"
            android:orientation="horizontal"
            android:visibility="gone">


            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="9AM-12PM"
                android:textSize="9dp"
                android:id="@+id/b9_12"
                android:background="@color/gray" />

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/b9_12"
                android:layout_toRightOf="@+id/b9_12"
                android:text="12AM-3PM"
                android:textSize="9dp"
                android:id="@+id/b12_3"
                android:background="@color/gray"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/b12_3"
                android:layout_toRightOf="@+id/b12_3"
                android:text="3AM-6PM"
                android:textSize="9dp"
                android:id="@+id/b3_6"
                android:background="@color/gray"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/b3_6"
                android:layout_toRightOf="@+id/b3_6"
                android:text="6AM-9PM"
                android:textSize="9dp"
                android:id="@+id/b6_9"
                android:background="@color/gray"/>

        </RelativeLayout>


        <Spinner
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/relativeLayout"
            android:layout_alignStart="@id/relativeLayout"
            android:layout_below="@id/relativeLayout"
            android:visibility="gone"></Spinner>

        <Button
            android:id="@+id/btn_conform"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="60dp"
            android:background="@drawable/conformorder"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_conformchange1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="60dp"
            android:background="@drawable/conformchanges"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/btn_conformchange2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="60dp"
            android:background="@drawable/rectangle"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_conformchange3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle"
            android:text="Conferm"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>


