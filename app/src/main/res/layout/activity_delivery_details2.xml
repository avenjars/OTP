<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.otp.DeliveryDetails2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/elements"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="54dp"
                android:text="Delivary Details"
                android:textColor="#ffffff"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="65dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/textView2"
                android:layout_toStartOf="@+id/textView2"
                app:srcCompat="@drawable/homeforall" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@+id/textView2"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="27dp"
                android:layout_marginRight="27dp"
                android:layout_toLeftOf="@+id/imageView"
                android:layout_toStartOf="@+id/imageView"
                app:srcCompat="@drawable/navigatiobtn" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_alignEnd="@+id/imageView"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignTop="@+id/imageView2"
                android:text="Jars"
                android:textColor="#ffffff"
                android:textSize="24dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/constraintLayout"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="32dp"
            android:text="Name"
            android:textColor="#808080"
            android:textSize="17dp" />


        <EditText
            android:id="@+id/editTextname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginTop="8dp"
            android:ems="5"

            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/contactnumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/editTextname"
            android:layout_alignStart="@+id/editTextname"
            android:layout_below="@+id/editTextname"
            android:layout_marginTop="19dp"
            android:text="Contact Number"
            android:textColor="#808080"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/editTextcontactnumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/contactnumber"
            android:layout_alignStart="@+id/contactnumber"
            android:layout_below="@+id/contactnumber"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:inputType="phone" />

        <TextView
            android:id="@+id/socityname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/editTextcontactnumber"
            android:layout_alignStart="@+id/editTextcontactnumber"
            android:layout_below="@+id/editTextcontactnumber"
            android:layout_marginTop="23dp"
            android:text="Socity Name"
            android:textColor="#808080"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/editTextsocityname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/socityname"
            android:layout_alignStart="@+id/socityname"
            android:layout_below="@+id/socityname"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/flatnoname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/editTextsocityname"
            android:layout_alignStart="@+id/editTextsocityname"
            android:layout_below="@+id/editTextsocityname"
            android:layout_marginTop="27dp"
            android:text="Flat No./ Flat Name"
            android:textColor="#808080"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/editTextflatnoname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/flatnoname"
            android:layout_alignStart="@+id/flatnoname"
            android:layout_below="@+id/flatnoname"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/landmark"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/editTextflatnoname"
            android:layout_alignStart="@+id/editTextflatnoname"
            android:layout_below="@+id/editTextflatnoname"
            android:layout_marginTop="31dp"
            android:text="Landmark(optional)"
            android:textColor="#808080"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/editTextlandmark"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/landmark"
            android:layout_alignStart="@+id/landmark"
            android:layout_below="@+id/landmark"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/editTextlandmark"
            android:layout_alignStart="@+id/editTextlandmark"
            android:layout_below="@+id/editTextlandmark"
            android:layout_marginTop="35dp"
            android:text="Area"
            android:textColor="#808080"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/editTextarea"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/area"
            android:layout_alignStart="@+id/area"
            android:layout_below="@+id/area"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:inputType="textPersonName" />


        <Button
            android:id="@+id/conformChanges"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/editTextarea"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp"
            android:background="@drawable/conformchanges"

            android:textColor="#ffffff" />

    </RelativeLayout>

</ScrollView>
